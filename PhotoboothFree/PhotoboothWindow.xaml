<Window x:Class="PhotoboothFree.PhotoboothWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoboothFree"
        mc:Ignorable="d"
        Title="PhotoboothWindow" Height="300" Width="300" AllowsTransparency="True" ResizeMode="NoResize" WindowStyle="None" Closing="Window_Closing" Background="Black" >
    <Grid>

        <Image HorizontalAlignment="Stretch" Name="frameHolder"  VerticalAlignment="Stretch"  Stretch="Fill" RenderTransformOrigin=".5,.5">
            <Image.RenderTransform>
                <ScaleTransform ScaleX="-1"/>
            </Image.RenderTransform>
        </Image>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="100" Name="CountDownTextBlock" Foreground="White">1</TextBlock>
    </Grid>
    
</Window>
