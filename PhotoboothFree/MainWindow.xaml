<Window x:Class="PhotoboothFree.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoboothFree"
        mc:Ignorable="d"
        Title="Photobooth Free" Height="350" Width="525" Loaded="Window_Loaded" WindowStyle="None" Icon="photobooth.ico" ResizeMode="NoResize">
    <DockPanel>
        <Menu DockPanel.Dock="Top" Height="30" FontSize="20" Name="MainMenu" Visibility="Collapsed">
            <MenuItem Header="_Menu" >
                <MenuItem Header="_Settings" Click="SettingsButton_Click"/>
                <MenuItem Header="_About" Click="AboutButton_Click"/>
                <MenuItem Header="E_xit" Click="ExitButton_Click"/>
            </MenuItem>
        </Menu>
        
        <Grid>

            <Button Click="Button_Click" FontSize="100" MouseRightButtonUp="Button_MouseRightButtonUp">
                <StackPanel Orientation="Horizontal">
                <Image Source="pack://application:,,,/bin/Debug/click.png"  />
                    
                </StackPanel>
            </Button>
            
        </Grid>
    </DockPanel>

</Window>
